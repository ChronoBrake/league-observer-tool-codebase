{
  "name": "league-observer-tool",
  "version": "2.0.1",
  "description": "An addition to the league-prod-toolkit for the observer PC",
  "author": {
    "name": "Riot Community Volunteers"
  },
  "license": "MIT",
  "repository": "https://github.com/RCVolus/league-observer-tool",
  "keywords": [
    "League",
    "production",
    "observer"
  ],
  "main": "./build/index.js",
  "scripts": {
    "watch": "tsc -w -p ./tsconfig.e.json",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "npm run build:backend && electron ./build/index.js",
    "svelte-build": "rollup -c",
    "dev": "rollup -c -w",
    "svelte-start": "sirv public",
    "build:preload": "cd preload && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "tsc -p ./tsconfig.json",
    "dist": "npm run build:preload && npm run build:frontend && npm run build:backend && electron-builder build -w"
  },
  "build": {
    "forceCodeSigning": false,
    "publish": [
      {
        "owner": "RCVolus",
        "repo": "League-Observer-Tool",
        "provider": "github"
      }
    ],
    "appId": "gg.rcv.league-observer-tool",
    "productName": "League Observer Tool",
    "copyright": "Copyright Â© 2021 Riot Community Volunteers",
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon.ico",
      "publisherName": "Riot Community Volunteers",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": true,
      "installerIcon": "assets/icons/icon.ico",
      "deleteAppDataOnUninstall": true,
      "menuCategory": true,
      "shortcutName": "League Observer Tool",
      "artifactName": "League-Observer-Tool-Setup-${version}.${ext}"
    },
    "files": [
      "build/**/*",
      "frontend/public/**/*",
      "preload/public/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      "assets/**/*"
    ]
  },
  "devDependencies": {
    "@types/uniqid": "^5.3.1",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "electron": "^15.0.0",
    "electron-builder": "^22.11.7",
    "eslint": "^7.32.0",
    "tslib": "^2.3.1",
    "typescript": "^3.9.10"
  },
  "dependencies": {
    "electron-app-settings": "^1.2.2",
    "electron-cfg": "^1.2.7",
    "electron-log": "^4.4.1",
    "electron-store": "^8.0.1",
    "electron-updater": "^4.3.9",
    "league-connect": "^5.3.0",
    "node-fetch": "^2.6.5",
    "sirv-cli": "^1.0.14",
    "uniqid": "^5.4.0",
    "ws": "^7.5.5"
  }
}
