{
  "name": "league-observer-tool",
  "version": "0.7.2",
  "description": "An addition to the league-prod-toolkit for the observer PC",
  "author": {
    "name": "Riot Community Volunteers"
  },
  "license": "MIT",
  "repository": "https://github.com/RCVolus/league-prod-observer-tool",
  "keywords": [
    "League",
    "production",
    "observer"
  ],
  "main": "./build/index.js",
  "scripts": {
    "build": "tsc -p ./tsconfig.e.json",
    "watch": "tsc -w -p ./tsconfig.e.json",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "npm run build && electron ./build/index.js",
    "svelte-build": "rollup -c",
    "dev": "rollup -c -w",
    "svelte-start": "sirv public",
    "dist": "npm run svelte-build && npm run build && electron-builder -w"
  },
  "build": {
    "appId": "gg.rcv.league-observer-tool",
    "productName": "League Observer Tool",
    "copyright": "Copyright Â© 2021 Riot Community Volunteers",
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon.ico",
      "publisherName": "Riot Community Volunteers"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "installerIcon": "assets/icons/icon.ico",
      "deleteAppDataOnUninstall": true,
      "menuCategory": true,
      "shortcutName": "League Observer Tool"
    },
    "files": [
      "build/**/*",
      "public/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      "assets/**/*"
    ]
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "@rollup/plugin-typescript": "^8.0.0",
    "@tsconfig/svelte": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "@types/uniqid": "^5.3.1",
    "electron": "^9.4.0",
    "electron-builder": "^22.10.5",
    "eslint": "^7.3.1",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.0.0",
    "svelte-check": "^1.0.0",
    "svelte-preprocess": "4.6.9",
    "sveltestrap": "^3.14.1",
    "tslib": "^2.0.0",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "electron-app-settings": "^1.2.2",
    "league-connect": "^5.2.0",
    "node-fetch": "^2.6.1",
    "sirv-cli": "^1.0.0",
    "uniqid": "^5.3.0",
    "ws": "^7.4.5"
  }
}
