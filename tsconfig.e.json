{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "target": "ES6",
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": ".",
    "esModuleInterop": false,
    "skipLibCheck": true,
    "rootDirs": ["src/electron"],
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "files": [
    "./src/electron/index.ts",
    "./src/electron/IPC.ts",
    "./src/electron/preload.ts"
  ],
  "include": [
    "src/electron/**/*"
  ],
  "exclude": ["node_modules/**/*"]
}